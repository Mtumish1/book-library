<h1>All Books</h1>
<ul>
  <% @books.each do |book| %>
    <li>
      <strong><%= link_to book.title, book_path(book) %></strong> by <%= book.author %>
      <% if book.available %>
        <span style="color: green;">(Available)</span>
      <% else %>
        <span style="color: red;">(Borrowed)</span>
      <% end %>
    </li>
  <% end %>
</ul>
