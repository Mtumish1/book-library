<h1><%= @book.title %></h1>
<p>Author: <%= @book.author %></p>
<p>ISBN: <%= @book.isbn %></p>

<% if @book.available %>
  <%= button_to "Borrow", borrow_book_path(@book), method: :post %>
<% else %>
  <p style="color: red;">This book is currently borrowed.</p>
<% end %>

<%= link_to "Back to Books", books_path %>
