<div class="container mx-auto p-6">
  <div class="bg-white shadow-lg rounded-lg p-6 max-w-xl mx-auto">
    <h1 class="text-3xl font-bold"><%= @book.title %></h1>
    <p class="text-gray-600 mt-2">by <%= @book.author %></p>
    <p class="mt-4 text-lg">ISBN: <%= @book.isbn %></p>
    
    <p class="mt-4 text-sm">
      Status: 
      <% if @book.availability_status %>
        <span class="text-green-600 font-bold">Available</span>
      <% else %>
        <span class="text-red-600 font-bold">Borrowed</span>
      <% end %>
    </p>

    <% if @book.availability_status %>
      <form action="<%= borrow_book_path(@book) %>" method="POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">
          Borrow Book
        </button>
      </form>
    <% end %>
    
    <a href="<%= books_path %>" class="mt-4 inline-block text-blue-600">
      ‚Üê Back to Library
    </a>
  </div>
</div>
